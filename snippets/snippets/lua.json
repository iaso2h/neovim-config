{
    "vimhead": {
        "prefix": "vimhead",
        "body": [
            "local fn  = vim.fn",
            "local api = vim.api",
            "local M   = {}",
            "$0",
            "",
            "return M"
        ],
        "description": "vim head local variables"
    },
    "#!": {
        "prefix": [
            "#!"
        ],
        "body": [
            "#!/usr/bin/env lua",
            "$0"
        ],
        "description": "#!/usr/bin/env lua"
    },
    "vimpcall": {
        "prefix": "pcallv",
        "body": [
            "local ok, msgOrVal = pcall(${1:func}, ${2:args})",
            "${3:if not ok then",
            "\tvim.notify(msgOrVal, vim.log.levels.ERROR)}",
            "${4:\thandler(ok, err)\nelse\n\tsuccess(ok, err)\nend}"
        ],
        "description": "pcall statement"
    },
    "viminput": {
        "prefix": "viminput",
        "body": [
            "vim.ui.input({prompt = \"${1:Prompt text}: \"}, function(input)",
            "\t$0",
            "end)"
        ],
        "description": "vim ui input"
    },
}
