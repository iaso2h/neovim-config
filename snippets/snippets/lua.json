{
    "vimhead": {
        "prefix": "vimhead",
        "body": [
            "local fn  = vim.fn",
            "local api = vim.api",
            "local M   = {}",
            "$0",
            "",
            "return M"
        ],
        "description": "vim head local variables"
    },
    "#!": {
        "prefix": [
            "#!"
        ],
        "body": [
            "#!/usr/bin/env lua",
            "$0"
        ],
        "description": "#!/usr/bin/env lua"
    },
    "return": {
        "prefix": "rt",
        "body": ["return $0"],
        "description": "return value"
    },
    "vimecho": {
        "prefix": "vimecho",
        "body": [
            "api.nvim_echo({{\"${1:text}\", \"${2:Normal}\"}}, ${3:true}, {})"
        ],
        "description": "Echo message using vim.api.nvim_echo()"
    },
    "vimconfirm": {
        "prefix": "vimconfirm",
        "body": [
            "cmd \"echohl ${1:MoreMsg}\"",
            "local answer = fn.confirm(\"${2:Save modification?}\",",
            "\t\">>> &Save\n&Discard\n&Cancel",
            3,
            "Question\")",
            "cmd \"echohl None\""
        ],
        "description": "vim confirm() in lua"
    },
    "vimpcall": {
        "prefix": "pcallv",
        "body": [
            "local ok, msg = pcall(${1:func}, ${2:args})",
            "${3:if not ok then",
            "\tvim.notify(msg, vim.log.levels.ERROR)}",
            "${4:\thandler(ok, err)\nelse\n\tsuccess(ok, err)\nend}"
        ],
        "description": "pcall statement"
    },
    "viminput": {
        "prefix": "viminput",
        "body": [
            "vim.ui.input({prompt = \"${1:Prompt text}: \"}, function(input)",
            "\t$0",
            "end)"
        ],
        "description": "vim ui input"
    },
    "do return": {
        "prefix": "dor",
        "body": [
            "do return end"
        ],
        "description": "do return end"
    }
}
